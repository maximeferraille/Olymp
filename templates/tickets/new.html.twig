{% extends 'base.html.twig' %}

{% block body %}

    <body>

    <div class="container">

        <div class="jumbotron">
            <h1 class="display-3">Tickets</h1>
           </div>

        <div class="row marketing">
            <div class="col-lg-6">
                <form action="{{ path('tickets_new_id') }}" method="post">
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Choisir un evenement</label>
                        <select class="form-control" name="select_event" id="exampleFormControlSelect1">
                          {% for events in event %}
                              <option value="{{ events.id }}">{{ events.SessionCode }} - {{ events.DescriptionName }}</option>
                          {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre de ticket a génerer</label>
                        <input name="nombre_ticket" type="number" class="form-control" id="exampleInputEmail1">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Prix de départ</label>
                        <input name="prix_depart" type="text" class="form-control" id="exampleInputEmail1">
                    </div>
                    <button type="submit" class="btn btn-primary">Generer</button>
                </form>
            </div>

            <div class="col-lg-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>status</th>
                        <th>Numero de siege</th>
                        <th>Prix de départ</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for ticket in tickets %}
                        <tr>
                            <td>{{ ticket.id }}</td>
                            <th>{{ ticket.status }}</th>
                            <td>{{ ticket.seat_number }}</td>
                            <td>{{ ticket.start_price  }} €</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>

    </div> <!-- /container -->



{% endblock %}